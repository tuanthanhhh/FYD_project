<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/css/index.css">
    <title>My web</title>
    <style>
        table {
      border-collapse: collapse;
      width: 100%;
      margin-top: 20px;
    }
    
    th, td {
      padding: 8px;
      text-align: center;
      border-bottom: 1px solid black;
      border-left:1px solid black ;
    }
    
    
    tr:hover {background-color: #ccc;}
    button {
      width: 70px;
      height: 30px;
      border-radius: 5px;
    }
    </style>
</head>
<body>
<header>
    <div class="topnav">
        <a href="/User/:Id">Home</a>
        <a href="/Create" >Create Film</a>
        <a href="/List" class="active">List Film</a>
        <a href="/Sign-out">Sign-out</a>
        <a href="/Import">Import Film</a>
        <a href="/export">Export Film</a>
    </div>
</header>

<section>
    <table>
        <tr>
          <th>ID</th>
          <th>Name</th>
          <th>Director</th>
          <th>Duration</th>
          <th>Genre</th>
          <th>Release_date</th>
          <th>Script</th>
          <th>Action</th>
        </tr>
        </tr>
          <% listFilm.forEach(function(film) {%>
            <tr>
              <td>
                <%= film.Id%>
              </td>
              <td>
                <%= film.Name%>
              </td>
              <td>
                <%= film.Director%>
              </td>
              <td>
                <%= film.Duration%>
              </td>
              <td>
                <%= film.Genre%>
              </td>
              <td>
                <%= film.Release_date%>
              </td>
              <td>
                <%= film.Script%>
              </td>
              <td>
                <a href="/update/<%= film.Id%>"><button>Edit</button></a>
                <a href="/delete/<%= film.Id%>"><button>Delete</button></a>
              </td>
            </tr>
          <% }) %>
      </table>
      <div class="page">
        <% if (currentPage > 1) { %>
          <a href="/List/<%= parseInt(currentPage) - 1 %>"> <button>Previous</button></a>
        <% } %>
      
        <% if (listFilm.length === itemsPerPage) { %>
          <a href="/List/<%= parseInt(currentPage) + 1 %>"><button><%= parseInt(currentPage) + 1 %></button></a>
          <a href="/List/<%= parseInt(currentPage) + 2 %>"><button><%= parseInt(currentPage) + 2 %></button></a>
          <h1 class="dot">...</h1>
          <a href="/List/<%= parseInt(currentPage) + 5 %>"><button><%= parseInt(currentPage) + 5 %></button></a>
          <a href="/List/<%= parseInt(currentPage) + 1 %>"><button>Next</button></a>
        <% } %>
      </div>
</section>
</body>
</html>

